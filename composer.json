{
    "name": "cmatosbc/ananke",
    "type": "library",
    "description": "A flexible PHP service container that supports conditional service instantiation, relying on PHP 8+ match expression.",
    "license": "gpl-3.0-or-later",
    "authors": [
        {
            "name": "Carlos Matos",
            "email": "carlosarturmatos1977@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ananke\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ananke\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
